{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2018", "esnext.asynciterable"],
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true, 
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
